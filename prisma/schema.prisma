generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int     @id @default(autoincrement())
  email        String  @unique
  name         String?
  password     String
  isValidEmail Int
  otpCode      String
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  products Product[]
}

model People {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model Product {
  id         Int      @id @default(autoincrement())
  name       String
  color      String
  price      String
  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])
  images     Image[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Image {
  id        Int     @id @default(autoincrement())
  url       String
  productId Int
  product   Product @relation(fields: [productId], references: [id])
}
